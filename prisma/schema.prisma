// Prisma schema for RC Round 1 Backend
// Lifelines reset per quiz and are stored in Progress

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////
// USER MODEL
////////////////////////////////////
model User {
  userid        Int      @id @default(autoincrement())
  username      String   @unique @db.VarChar(100)
  email         String   @unique @db.VarChar(150)
  password      String   @db.VarChar(255)
  name          String   @db.VarChar(150)

  isJunior      Boolean  @default(false)
  finalResult   Int      @default(0)

  // One active quiz at a time
  progress      Progress?

  @@map("Users")
}

////////////////////////////////////
// QUESTION MODEL
////////////////////////////////////
model Question {
  id            Int       @id @default(autoincrement())
  category      String    @db.VarChar(50)
  questionText  String    @db.Text
  answer        String    @db.VarChar(255)
  hint          String?   @db.VarChar(255)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  progresses    Progress[]

  @@map("Question")
}

////////////////////////////////////
// PROGRESS MODEL (Quiz Session)
////////////////////////////////////
model Progress {
  progressId               Int       @id @default(autoincrement())

  // One active progress per user
  userId                   Int       @unique
  currentQuestionId        Int?

  // Stores per-question history
  questionProgress         Json      @default(dbgenerated("'[]'::json"))

  // Used to calculate time spent per question
  currentQuestionStartTime DateTime?

  // Lifelines: usable only once per quiz
  lifelines                Json      @default(dbgenerated("'{\"hint\":false,\"freeze\":false,\"flip\":false}'::json"))

  // Final quiz score
  marks                    Int       @default(0)

  // Locks quiz when finished
  isCompleted              Boolean   @default(false)

  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt

  // Relations
  user       User      @relation(fields: [userId], references: [userid], onDelete: Cascade)
  question   Question? @relation(fields: [currentQuestionId], references: [id])

  @@map("Progress")
}
