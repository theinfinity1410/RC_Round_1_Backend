generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
    userId      String    @id @default(uuid())
  username    String    @unique @db.VarChar(100)
  email       String    @unique
  password    String    @db.VarChar(255)
  name        String    @db.VarChar(150)
  isJunior    Boolean   @default(false)
  finalResult Int       @default(0)
  endTime     DateTime?
  startTime   DateTime?
  progress    Progress?

  @@map("Users")
}

model Question {
  id           String   @id @default(uuid())
  category     Boolean  @default(false)
  questionText String
  answer       String   @default("")
  hint         String?  @db.VarChar(255)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("Questions")
}

model Progress {
  progressId         String   @id @default(uuid())
  userId             String   @unique
  lifelines          Json     @default("{\"hint\":false,\"freeze\":false,\"flip\":false}")
  marks              Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  attemptedCount     Int      @default(0)
  correctCount       Int      @default(0)
  currentQuestionIdx Int      @default(0)
  questionIds        String[] @default([])
  user               User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("Progress")
}
